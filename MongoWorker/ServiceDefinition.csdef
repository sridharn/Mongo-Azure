<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="MongoWorker" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition">
  <WorkerRole name="Mongo">
    <Imports>
    </Imports>
    <LocalResources>
      <LocalStorage name="MongoDBLocalDataDir" cleanOnRoleRecycle="false" sizeInMB="2200" />
      <LocalStorage name="MongoDBLocalLogDir" cleanOnRoleRecycle="false" sizeInMB="20" />
    </LocalResources>
    <ConfigurationSettings>
      <Setting name="MongoDBDataDir" />
    </ConfigurationSettings>
    <Endpoints>
      <InternalEndpoint name="MongodPort" protocol="tcp" port="27017" />
    </Endpoints>
  </WorkerRole>
  <WebRole name="MongoTestWebApp">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="8080" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
  </WebRole>
</ServiceDefinition>